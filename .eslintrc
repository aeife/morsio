{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "NODE_ENV": false,
    "describe": false,
    "it": false,
    "afterEach": false
  },
  "rules": {
    "semi": [2, "always"]
  }
}
